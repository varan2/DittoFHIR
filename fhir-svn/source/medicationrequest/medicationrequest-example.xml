    </additionalInstruction>
    <timing>
      <repeat>
        <frequency value="3"/>
        <period value="1"/>
        <periodUnit value="d"/>
      </repeat>
    </timing>
    <route>
      <coding>
        <system value="http://snomed.info/sct"/>
        <code value="394899003"/>
        <display value="oral administration of treatment"/>
      </coding>
    </route>
    <doseQuantity>
      <value value="5"/>
      <unit value="ml"/>
      <system value="http://unitsofmeasure.org"/>
      <code value="ml"/>
    </doseQuantity>
  </dosageInstruction>

  <dispenseRequest>
    <quantity>
      <value value="100"/>
      <unit value="ml"/>
      <system value="http://unitsofmeasure.org"/>
      <code value="ml"/>
    </quantity>
  </dispenseRequest>

</MedicationRequest>
